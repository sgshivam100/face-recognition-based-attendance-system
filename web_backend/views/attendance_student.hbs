<!-- attendance_student.html -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Attendance Data</title>

    <!-- Include jsPDF and xlsx libraries -->
    <!-- Include jsPDF and xlsx libraries -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/1.3.2/jspdf.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.4.0/jspdf.umd.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/xlsx/0.17.1/xlsx.full.min.js"></script>

</head>
<body>

<h3>Attendance Data for Course</h3>
<p>Course: {{ course }}</p>
<p>Roll No: {{ rollno }}</p>

{{#if organizedData.dates.length}}
    {{!-- <button onclick="downloadPDF()">Download as PDF</button>
    <button onclick="downloadExcel()">Download as Excel</button> --}}

    <table border="1">
        <thead>
            <tr>
                <th>Date</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            {{#each organizedData.attendanceData as |attendance|}}
                <tr>
                    <td>{{ attendance.date }}</td>
                    <td>{{ attendance.status }}</td>
                </tr>
            {{/each}}
        </tbody>
    </table>
{{else}}
    <p>No attendance data available for the selected course and date range.</p>
{{/if}}

<script>
   function downloadPDF() {
    const pdf = new jsPDF();
    pdf.text('Attendance Data for Course', 10, 10);
    
    const table = document.querySelector('table');
    pdf.autoTable({ html: table });

    pdf.save('attendance.pdf');
}


    function downloadExcel() {
    const ws = XLSX.utils.json_to_sheet(organizedData.attendanceData);
    const wb = XLSX.utils.book_new();
    XLSX.utils.book_append_sheet(wb, ws, 'Attendance Data');
    XLSX.writeFile(wb, 'attendance.xlsx');
}

</script>

</body>
</html>
